datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  name         String
  cellPhone    String   @unique
  requestState Int      @default(0)
  roles        Role[]   @default([USER])
  createdAt    DateTime @default(now())
  Order        Order[]
}

enum Role {
  USER
  ADMIN
}

model Tools {
  id           String   @id @default(uuid())
  name         String
  price        Float
  createdAt    DateTime @default(now())
  requestState Int      @default(0)
  Order        Order[]
}

model Order {
  id        String   @id @default(uuid())
  type      String   @default("Peding")
  tool      Tools    @relation(fields: [toolId], references: [id])
  toolId    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model AllowedUsers {
  id        String   @id @default(uuid())
  cellPhone String   @unique
  createdAt DateTime @default(now())
}
